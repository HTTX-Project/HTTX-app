<view class="container"><block wx:if="{{!isLogin||empty===true}}"><view class="empty"><image src="/static/emptyCart.jpg" mode="aspectFit"></image><block wx:if="{{isLogin}}"><view class="empty-tips">空空如也<block wx:if="{{isLogin}}"><navigator class="navigator" url="../index/index" open-type="switchTab">随便逛逛></navigator></block></view></block><block wx:else><view class="empty-tips">空空如也<view data-event-opts="{{[['tap',[['navToLogin',['$event']]]]]}}" class="navigator" bindtap="__e">去登陆></view></view></block></view></block><block wx:else><view><view class="cart-list"><block wx:for="{{cartList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><block><view class="{{['cart-item',(index!==cartList.length-1)?'b-b':'']}}"><view class="image-wrapper"><image class="{{[item.loaded]}}" src="{{url+''+item.goodsDetail.IMAGES_LIST[0].PATH}}" mode="aspectFill" lazy-load data-event-opts="{{[['load',[['onImageLoad',['cartList',index]]]],['error',[['onImageError',['cartList',index]]]]]}}" bindload="__e" binderror="__e"></image><view data-event-opts="{{[['tap',[['check',['item',index]]]]]}}" class="{{['yticon icon-xuanzhong2 checkbox',(item.active)?'checked':'']}}" bindtap="__e"></view></view><view class="item-right"><text class="clamp title">{{item.goodsDetail.NAME}}</text><text class="attr">{{item.goodsDetail.DETAIL}}</text><text class="price">{{"¥"+item.goodsDetail.PRICE}}</text><uni-number-box class="step vue-ref-in-for" vue-id="{{'1-'+index}}" min="{{1}}" max="{{nMax}}" value="{{item.buyNumber}}" isMax="{{item.buyNumber>=nMax?true:false}}" isMin="{{item.buyNumber===1}}" index="{{index}}" data-ref="uni-number" data-event-opts="{{[['^eventChange',[['numberChange']]]]}}" bind:eventChange="__e" bind:__l="__l"></uni-number-box></view><text data-event-opts="{{[['tap',[['deleteCartItem',[index]]]]]}}" class="del-btn yticon icon-fork" bindtap="__e"></text></view></block></block></view><view class="action-section"><view class="checkbox"><image src="{{allChecked?'/static/selected.png':'/static/select.png'}}" mode="aspectFit" data-event-opts="{{[['tap',[['check',['all']]]]]}}" bindtap="__e"></image><view data-event-opts="{{[['tap',[['clearCart',['$event']]]]]}}" class="{{['clear-btn',(allChecked)?'show':'']}}" bindtap="__e">清空</view></view><view class="total-box"><text class="price">{{"¥"+total}}</text></view><button class="no-border confirm-btn" type="primary" data-event-opts="{{[['tap',[['createOrder',['$event']]]]]}}" bindtap="__e">去结算</button></view></view></block></view>