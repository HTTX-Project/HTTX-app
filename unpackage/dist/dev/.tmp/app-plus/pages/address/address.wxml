<view class="content b-t"><block wx:if="{{!addressList.length}}"><view class="empty"><image src="/static/address_empty.png" mode="aspectFit"></image><view class="empty-tips">还没有添加地址呢</view></view></block><block wx:else><block wx:for="{{addressList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['checkAddress',['$0'],[[['addressList','',index]]]]]]]}}" class="list b-b" bindtap="__e"><view class="wrapper"><view class="address-box"><block wx:if="{{item.IS_USE==1}}"><text class="tag">默认</text></block><text class="address">{{item.PROVINCE+item.CITY+item.DISTRICT+item.ADDRESS}}</text></view><view class="u-box"><text class="name">{{item.NAME}}</text><text class="mobile">{{item.TEL}}</text></view></view><text data-event-opts="{{[['tap',[['addAddress',['edit','$0'],[[['addressList','',index]]]]]]]}}" class="yticon icon-bianji" catchtap="__e"></text></view></block></block><button data-event-opts="{{[['tap',[['addAddress',['add']]]]]}}" class="add-btn" bindtap="__e">新增地址</button></view>